---
import { getLangFromUrl, useTranslations } from '../lib/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="section bg-cream" id="contact">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-3xl text-center">
      <h2 class="heading-2 mb-6 text-balance">{t('contact.title')}</h2>
      <p class="text-lg text-steel">
        {t('contact.subtitle')}
      </p>
    </div>

    <div class="mt-16 grid gap-12 lg:grid-cols-2">
      <!-- Contact Form -->
      <div class="card">
        <form class="space-y-6">
          <div>
            <label for="name" class="mb-2 block text-sm font-medium text-near-black">
              {t('contact.form.name')}
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full rounded-lg border border-mist px-4 py-3 text-near-black placeholder-mist focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20"
            />
          </div>

          <div>
            <label for="email" class="mb-2 block text-sm font-medium text-near-black">
              {t('contact.form.email')}
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full rounded-lg border border-mist px-4 py-3 text-near-black placeholder-mist focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20"
            />
          </div>

          <div>
            <label for="phone" class="mb-2 block text-sm font-medium text-near-black">
              {t('contact.form.phone')}
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full rounded-lg border border-mist px-4 py-3 text-near-black placeholder-mist focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20"
            />
          </div>

          <div>
            <label for="message" class="mb-2 block text-sm font-medium text-near-black">
              {t('contact.form.message')}
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="w-full rounded-lg border border-mist px-4 py-3 text-near-black placeholder-mist focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20"
            ></textarea>
          </div>

          <button type="submit" class="btn-primary w-full">
            {t('contact.form.submit')}
          </button>
        </form>
      </div>

      <!-- Contact Information -->
      <div class="space-y-8">
        <!-- Address -->
        <div class="card">
          <div
            class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-accent-subtle text-accent"
          >
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="heading-4 mb-2">{t('contact.info.address')}</h3>
          <p class="text-steel">
            {lang === 'fa' ? 'ایران، تهران، منطقه صنعتی' : 'Industrial Zone, Tehran, Iran'}
          </p>
        </div>

        <!-- Phone -->
        <div class="card">
          <div
            class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-accent-subtle text-accent"
          >
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
          </div>
          <h3 class="heading-4 mb-2">{t('contact.info.phone')}</h3>
          <a href="tel:+982112345678" class="text-steel hover:text-accent">
            +98 21 1234 5678
          </a>
        </div>

        <!-- Email -->
        <div class="card">
          <div
            class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-accent-subtle text-accent"
          >
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
          </div>
          <h3 class="heading-4 mb-2">{t('contact.info.email')}</h3>
          <a href="mailto:info@taliman.com" class="text-steel hover:text-accent">
            info@taliman.com
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

---
import { getLangFromUrl, useTranslations } from '../lib/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const equipment = [
  {
    title: t('equipment.furnace.title'),
    description: t('equipment.furnace.description'),
  },
  {
    title: t('equipment.drawing.title'),
    description: t('equipment.drawing.description'),
  },
];
---

<section class="section bg-cream" id="equipment">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-3xl text-center">
      <h2 class="heading-2 mb-6 text-balance">{t('equipment.title')}</h2>
      <p class="text-lg text-steel">
        {t('equipment.subtitle')}
      </p>
    </div>

    <!-- Equipment Grid -->
    <div class="mt-16 grid gap-8 lg:grid-cols-2">
      {
        equipment.map((item) => (
          <div class="card group border-2 hover:border-accent">
            <div class="bg-gradient-accent mb-4 flex h-16 w-16 items-center justify-center rounded-xl text-white">
              <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"
                />
              </svg>
            </div>
            <h3 class="heading-4 mb-3">{item.title}</h3>
            <p class="text-steel">{item.description}</p>
          </div>
        ))
      }
    </div>

    <!-- Large Equipment Image -->
    <div class="mt-16">
      <div class="overflow-hidden rounded-2xl shadow-2xl">
        <img
          src="/images/hero/hero-2.jpg"
          alt="Manufacturing Equipment"
          class="h-[500px] w-full object-cover"
        />
      </div>
    </div>
  </div>
</section>
